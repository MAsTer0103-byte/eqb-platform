{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": [
    "**/.env.local",
    "tsconfig.json"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "cache": true
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "cache": true
    },
    "lint": {
      "outputs": []
    }
  }
}
